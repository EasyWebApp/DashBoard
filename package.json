{
    "name": "webcell-dashboard",
    "version": "0.5.0",
    "description": "Admin DashBoard scaffold of WebCell v2",
    "keywords": [
        "web-component",
        "typescript",
        "jsx",
        "web-cell",
        "scaffold",
        "dashboard",
        "admin"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/DashBoard.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/DashBoard/issues"
    },
    "dependencies": {
        "boot-cell": "2.0.0-alpha.4",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.1.1",
        "chart.js": "^2.9.4",
        "classnames": "^2.3.1",
        "koajax": "^0.7.1",
        "mobx": "^5.15.7",
        "mobx-web-cell": "0.4.0-rc.5",
        "web-cell": "^2.4.0-rc.6",
        "web-utility": "^3.0.1"
    },
    "devDependencies": {
        "@nuintun/qrcode": "^3.1.1",
        "@octokit/openapi-types": "^11.2.0",
        "@parcel/packager-raw-url": "^2.2.1",
        "@parcel/transformer-less": "^2.2.1",
        "@parcel/transformer-webmanifest": "^2.2.1",
        "@types/chart.js": "^2.9.35",
        "@types/node": "^14.18.10",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "autoprefixer": "^10.4.2",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.3",
        "parcel": "^2.2.1",
        "postcss": "^8.1.0",
        "prettier": "^2.5.1",
        "typescript": "~4.3.5",
        "workbox-cli": "^6.4.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml,js,ts,tsx}": "prettier --write",
        "*.{js,ts,tsx}": "eslint --fix"
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "start": "parcel src/index.html --no-hmr --no-source-maps --open",
        "pack": "parcel build src/index.html --public-url .",
        "build": "rm -rf dist/  &&  npm run pack  &&  workbox generateSW"
    }
}
