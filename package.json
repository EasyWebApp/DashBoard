{
    "name": "webcell-dashboard",
    "version": "0.5.0",
    "description": "Admin DashBoard scaffold of WebCell v2",
    "keywords": [
        "web-component",
        "typescript",
        "jsx",
        "web-cell",
        "scaffold",
        "dashboard",
        "admin"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/DashBoard.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/DashBoard/issues"
    },
    "main": "src/index.html",
    "dependencies": {
        "boot-cell": "^1.5.1",
        "bootstrap-icons": "^1.1.0",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.1",
        "chart.js": "^2.9.4",
        "classnames": "^2.2.6",
        "koajax": "^0.6.4",
        "mobx": "^5.15.7",
        "mobx-web-cell": "^0.3.2",
        "web-cell": "^2.2.0",
        "web-utility": "^2.0.0"
    },
    "devDependencies": {
        "@babel/compat-data": "^7.12.7",
        "@octokit/openapi-types": "^2.0.0",
        "@types/chart.js": "^2.9.28",
        "@types/node": "^14.14.11",
        "@typescript-eslint/parser": "^4.9.1",
        "autoprefixer": "^9.8.6",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.2.0",
        "husky": "^4.3.5",
        "less": "^3.12.2",
        "lint-staged": "^10.5.3",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.2.1",
        "typescript": "^4.1.2",
        "workbox-cli": "^6.0.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": "prettier --write",
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "parcel src/index.html --open",
        "pack": "parcel build src/index.html --public-url .",
        "build": "rm -rf dist/  &&  npm run pack  &&  workbox generateSW"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
